<div class="container" style="{% style background-image background %}">
	<div class="row">
		<!-- Gallery Source: Do Not Modify -->
		<div id="take_gal" style="display:none;">
		{% plugin gallery image_gallery %}
		{% for entry in image_gallery.entries %}
		    <li>
		    	<div class="gbody">{{ entry.body }}</div>
		    	<div class="gtitle">{{ entry.title }}</div>
		    	<div class="gdescription">{{ entry.description }}</div>
		    </li>
		{% endfor %}
		</div>
		<!-- End Gallery Source -->

		<div id="put_gal"></div><!-- Place me where you want the slider or content to appear -->
	</div>
</div>

<!-- Required -->
<script src="http://wildfiredocs.com/templates/assets/handlebars-1.0.0.beta.6.js" type="text/javascript"></script>
<script src="http://wildfiredocs.com/templates/assets/gallery_helper.js" type="text/javascript"></script>
<!--/ Required -->

<!-- Additional Scripts -->
	<!-- any other scripts needed can go here -->
<!--/ Additional Scripts -->

<!-- Output Template
| this.src 		=> Image Source
| this.url 		=> Click-through URL
| this.title 	=> Caption Title
| this.desc 	=> Caption Description
-->
{% raw %}
<script id="gallery-template" type="text/x-handlebars-template">
{{#images}}
	{{this.title}}
	{{this.desc}}

	{{#if this.url}}<a href="{{this.url}}">{{/if}}
	<img src="{{this.src}}" alt="{{this.title}}">
	{{#if this.url}}</a>{{/if}}
{{/images}}
</script>
{% endraw %}
<!--/ Output Template -->

<script type="text/javascript">
$(document).ready( function () {
	var template_src = $('#gallery-template').html();

	gen_gallery({
		source: 'take_gal', 
		template: template_src,
		target: 'put_gal'
	});
});

$(document).bind('gen_gallery_complete', function () {
	// Gallery HTML Generated
	// Put any slider init functions here
});
</script>